# Marvin Environment Configuration
# Copy to /opt/marvin/.env and edit values

# Django Settings
DEBUG=False
SECRET_KEY=your-production-secret-key-here
ALLOWED_HOSTS=your-domain.com,localhost

# Database
DB_NAME=mrvn
DB_USER=mrvn
DB_PASS=your-secure-database-password
DB_HOST=127.0.0.1
DB_PORT=5432

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT_RPM=60

# Non-interactive mode for management commands
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com
DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password

# Default LLM Provider (for onboard command)
DEFAULT_LLM_PROVIDER=anthropic
DEFAULT_LLM_MODEL=claude-sonnet-4-20250514
